    <header class="bg-dark">
        <nav class="navbar navbar-expand-md bg-secondary">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Article" asp-action="Index">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Author" asp-action="Index">Authors</a>
                </li>
